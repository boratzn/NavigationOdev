<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_activity_nav"
    app:startDestination="@id/anasayfaFragment">

    <fragment
        android:id="@+id/anasayfaFragment"
        android:name="com.boratuzun.navigationodev.AnasayfaFragment"
        android:label="fragment_anasayfa"
        tools:layout="@layout/fragment_anasayfa" >
        <action
            android:id="@+id/a_sayfasina_gecis"
            app:destination="@id/sayfaAFragment" />
        <action
            android:id="@+id/x_sayfasina_gecis"
            app:destination="@id/sayfaXFragment" />
    </fragment>
    <fragment
        android:id="@+id/sayfaAFragment"
        android:name="com.boratuzun.navigationodev.SayfaAFragment"
        android:label="fragment_sayfa_a"
        tools:layout="@layout/fragment_sayfa_a" >
        <action
            android:id="@+id/b_sayfasina_gecis"
            app:destination="@id/sayfaBFragment"
            app:popUpTo="@id/sayfaAFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/sayfaBFragment"
        android:name="com.boratuzun.navigationodev.SayfaBFragment"
        android:label="fragment_sayfa_b"
        tools:layout="@layout/fragment_sayfa_b" >
        <action
            android:id="@+id/bden_y_sayfasina_gecis"
            app:destination="@id/sayfaYFragment"
            app:popUpTo="@id/sayfaBFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/sayfaXFragment"
        android:name="com.boratuzun.navigationodev.SayfaXFragment"
        android:label="fragment_sayfa_x"
        tools:layout="@layout/fragment_sayfa_x" >
        <action
            android:id="@+id/xden_y_sayfasina_gecis"
            app:destination="@id/sayfaYFragment"
            app:popUpTo="@id/sayfaXFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/sayfaYFragment"
        android:name="com.boratuzun.navigationodev.SayfaYFragment"
        android:label="fragment_sayfa_y"
        tools:layout="@layout/fragment_sayfa_y" >
        <action
            android:id="@+id/anasayfaya_gecis"
            app:destination="@id/anasayfaFragment" />
    </fragment>
</navigation>